<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/loginInView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="User login"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/loginInEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginInView"
        android:ems="10"
        android:inputType="text"
        android:text="riaval" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/passInView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginInEdit"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passInEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passInView"
        android:ems="10"
        android:inputType="textPassword"
        android:text="password" />

    <CheckBox
        android:id="@+id/passInChBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passInEdit"
        android:layout_marginTop="10dp"
        android:text="Show password" />

    <Button
        android:id="@+id/signInBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passInChBx"
        android:layout_marginTop="10dp"
        android:enabled="true"
        android:text="Sign in" />

</RelativeLayout>