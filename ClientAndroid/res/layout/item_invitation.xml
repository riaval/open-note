<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/invitationGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="invitationGroupName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#585858" />

            <TextView
                android:id="@+id/invitationSlug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="invitationSlug"
                android:textColor="#636363"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/invitationFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="invitationFullName"
                android:textColor="#636363"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/invitationLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="invitationLogin"
                android:textColor="#636363"
                android:textSize="6pt" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#cfd0d2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dbdee0" />

</LinearLayout>