<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
        
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/invitationGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invitationGroupName"
            android:fontFamily="sans-serif"
            android:textColor="#585858"
            android:textStyle="bold"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/invitationSlug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5a5a5a"
            android:gravity="right"
            android:text="invitationSlug"
            android:textSize="6pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/invitationFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invitationFullName"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/invitationLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="invitationLogin"
            android:textSize="6pt" />
    </LinearLayout>

</LinearLayout>