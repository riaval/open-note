        android:textColor="#626262" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Licence: Apache License v2.0"
        android:textColor="#626262" />

</LinearLayout>